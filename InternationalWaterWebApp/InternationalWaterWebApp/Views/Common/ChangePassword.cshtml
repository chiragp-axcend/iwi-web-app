@using InternationalWaterWebApp.Library.ViewModel
@model User

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="GreyBG rounded-3 py-3">
    <div class="container-fluid">
        <div class="row g-3">
            <div class="col-lg-12 col-12">
                <div class="bg-white WelWayFindr br-10 p-3 mb-3">
                    <div class="Heading">
                        <h2>Change Password</h2>
                    </div>
                    @using (Html.BeginForm("ChangePassword", "Common", FormMethod.Post, new { @id = "ChangePasswordForm", @class = "form-horizontal" }))
                    {
                        @if (!string.IsNullOrWhiteSpace(Convert.ToString(TempData["Error"])))
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                @TempData["Error"]
                            </div>
                        }
                        <div class="innerPgeHeading mb-4 d-flex justify-content-between">
                            <div class="row align-items-center mb-3">
                                <div class="col-md-12 row">
                                    <div class="row align-items-center mb-3">
                                        <div class="col-md-3">
                                            <label for="Password"><span class="Complsry me-1">*</span>New Password</label>
                                        </div>
                                        <div class="col-sm-4">
                                            @Html.PasswordFor(x => x.Password, new { @id = "Password", @class = "form-control required", placeholder = "New Password", required = "required" })
                                        </div>
                                    </div>
                                    <div class="row align-items-center mb-3">
                                        <div class="col-md-3">
                                            <label for="Confirm"><span class="Complsry me-1">*</span>Confirm Password</label>
                                        </div>
                                        <div class="col-sm-4">
                                            @Html.Password("Confirm", "", new { @id = "Confirm", @class = "form-control required", placeholder = "Confirm Password", required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-9">
                                            <button type="submit" class="btn bg-green">Submit</button>
                                            @if (ViewBag.ReturnUrl != "")
                                            {
                                                @Html.Hidden("ReturnUrl", ViewBag.ReturnUrl, new { })
                                                <button type="button" class="btn btn-outline-dark" onclick="window.location.href='@ViewBag.ReturnUrl'">Cancel</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>