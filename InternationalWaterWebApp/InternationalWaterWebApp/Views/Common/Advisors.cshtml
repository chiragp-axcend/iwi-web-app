@using InternationalWaterWebApp.Library.Common;
@{
    ViewData["Title"] = "Advisors";
    EncryptDecryptData enc = new EncryptDecryptData();
}
<section class="GreyBG rounded-3 py-3">
    <div class="container-fluid">
        <div class="row g-3">
            <div class="col-lg-12 col-12">
                <div class="bg-white WelWayFindr br-10 p-3 mb-3">
                    <div class="Heading">
                        <h2>Manage Advisors</h2>
                        <a id="btn_table_opt" asp-controller="Common" asp-action="AdvisorAddEdit" asp-route-id="0" class="bg-green btn color-white ms-3">Add Advisor</a>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Convert.ToString(TempData["Success"])))
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @TempData["Success"]
                        </div>
                    }
                    <table class="table table-striped table-responsive table-borderless" id="CommonAdvisor">
                        <thead>
                            <tr>
                                <th>Edit</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Producers</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Advisor != null && ViewBag.Advisor.Tables.Count > 0 && ViewBag.Advisor.Tables[0].Rows != null)
                            {
                                @foreach (System.Data.DataRow Row in ViewBag.Advisor.Tables[0].Rows)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Common" asp-action="AdvisorAddEdit" asp-route-id="@enc.Encryptdata(Convert.ToString(Row["advisor_id"]))" title="Edit"><i class="bi bi-pencil-square f-26"></i></a>
                                           @* <a asp-controller="Common" asp-action="AdvisorAddEdit" asp-route-id="@enc.Encryptdata(Convert.ToString(Row["advisor_id"]))" title="Delete"><i class="bi bi-trash f-26"></i></a>*@
                                        </td>
                                        <td><a asp-controller="Common" asp-action="Producers" asp-route-id="@enc.Encryptdata(Convert.ToString(Row["advisor_id"]))">@Convert.ToString(Row["first_name"]) @Convert.ToString(Row["last_name"])</a></td>
                                        <td>@Convert.ToString(Row["email"])</td>
                                        <td><a asp-controller="Common" asp-action="Producers" asp-route-id="@enc.Encryptdata(Convert.ToString(Row["advisor_id"]))">@Convert.ToString(Row["producer_count"]) </a></td>
                                        <td>@Convert.ToString(Row["address1"]) @Convert.ToString(Row["address2"])</td>
                                        <td>@Convert.ToString(Row["city"])</td>
                                        <td>@Convert.ToString(Row["state"])</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td> <h5>No Data</h5></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>