@using InternationalWaterWebApp.Library.ViewModel;
@using InternationalWaterWebApp.Library.Common;
@{
    ViewData["Title"] = "Producers";
    EncryptDecryptData enc = new EncryptDecryptData();
}
<section class="GreyBG rounded-3 py-3">
    <div class="container-fluid">
        <div class="row g-3">
            <div class="col-lg-12 col-12">
                <div class="bg-white WelWayFindr br-10 p-3 mb-3">
                    <div class="Heading">
                        <h2>Manage Producers</h2>
                        <div class="text-right">
                            <a id="btn_table_opt" asp-controller="Common" asp-action="ProducersAddEdit" asp-route-id="0" class="bg-green btn color-white ms-3">Add Producer</a>
                        </div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Convert.ToString(TempData["Success"])))
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @TempData["Success"]
                        </div>
                    }
                    <table class="table table-striped table-responsive table-borderless" id="CommonProducer">
                        <thead>
                            <tr>
                                <th>Edit</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Advisor</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Producer != null && ViewBag.Producer.Tables.Count > 0 && ViewBag.Producer.Tables[0].Rows != null)
                            {
                                @foreach (System.Data.DataRow Row in ViewBag.Producer.Tables[0].Rows)
                                {
                                    <tr>
                                        <td> <a asp-controller="Common" asp-action="ProducersAddEdit" asp-route-id="@enc.Encryptdata(Convert.ToString(Row["producer_id"]))"><i class="bi bi-pencil-square f-26"></i></a></td>
                                        <td>@Convert.ToString(Row["producer_id"])</td>
                                        <td> <a asp-controller="Admin" asp-action="MyFields" asp-route-id="@enc.Encryptdata(Convert.ToString(Row["producer_id"]))">@Convert.ToString(Row["first_name"]) @Convert.ToString(Row["last_name"])</a></td>
                                        <td>@Convert.ToString(Row["email"])</td>
                                        <td>
                                            @if ((int)ViewBag.UserRole == (int)UserTypeEnum.Admin)
                                            {
                                                @*@Html.ActionLink(Convert.ToString(Row["adv_first_name"]) + " " + Convert.ToString(Row["adv_last_name"]), "AdvisorAddEdit", "Common", new { id = @enc.Encryptdata(Convert.ToString(Row["advisor_id"])) }, null)*@
                                                //@Convert.ToString(Row["adv_first_name"]) @Convert.ToString(Row["adv_last_name"])
                                                @Html.Raw(Convert.ToString(Row["adv_first_name"]) + " " + Convert.ToString(Row["adv_last_name"]))
                                            }
                                            else
                                            {
                                                @Html.Raw(Convert.ToString(Row["adv_first_name"]) + " " + Convert.ToString(Row["adv_last_name"]))
                                            }
                                        </td>
                                        <td>@Convert.ToString(Row["street_address"])</td>
                                        <td>@Convert.ToString(Row["city"])</td>
                                        <td>@Convert.ToString(Row["state"])</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td> <h5>No Data</h5></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>